    <section id="formWrap">
      <form novalidate>
        <div id="favicon">
            <div class="table">
                <div class="vertical" id="rp_info">
                </div>
            </div>
        </div>

        <div id="signIn">
            <div class="table">
              <div class="vertical">
                <div class="contents">
                </div>
              </div>
            </div>
            <div class="arrowContainer">
              <div class="arrow"></div>
            </div>
        </div>
      </form>
    </section>


    <section id="wait">
        <!-- because each section is an absolutely positioned element, we have to use the inner table container element to be able to vertically/horizontally center correctly.  Without the table element, the layout gets all messed up. -->
        <div class="table">
            <div class="vertical contents">
                <h2><%= gettext('Communicating with server') %></h2>
                <p><%= gettext('Just a moment while we talk with the server.') %></p>
            </div>
        </div>
    </section>

    <section id="error">
        <div class="table">
            <div class="vertical contents">
            </div>
        </div>
    </section>

    <section id="delay">
        <div class="table">
            <div class="vertical contents">
            </div>
        </div>
    </section>
